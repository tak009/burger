<div class="jumbotron jumbotron-bg text-center">
  <img src="/assets/img/burger-icon.png" alt="burger" align="top">
  <h1 class="text-danger">Eat-Da-Burger!</h1>
</div>

<div class="container text-center">

  <div class="row">
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <div class="item-bg">
              <p>{{id}}. {{burger_name}}</p>
            </div>
            <button type="button" class="btn btn-sm btn-secondary change-devour" data-id="{{id}}">Devour it!</button>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
     <ul>
       {{#each burgers}}
         {{#if devoured}}
           <p class="devoured">{{id}}. {{burger_name}}</p>
         {{/if}}
       {{/each}}
     </ul>
   </div>

  </div>
  <div class="row">
    <div class="col-md-12 mt-5">
      <form class="create-form">
        <div class="form-group">
          <textarea class="form-control textarea" id="new_burger" name="burger" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-md btn-primary">Submit</button>
      </form>
      <br>
      <p class="text-danger">Enter a burger you want to eat & Click the "Submit" button</p>
    </div>

  </div>
</div>
